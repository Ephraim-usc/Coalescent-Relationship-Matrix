#!/usr/bin/env python

### importing packages
import argparse

### importing egrm
from egrm import getEK_trees, read_trees, write_grm

### parse arguments
parser=argparse.ArgumentParser()
parser.add_argument('--input', type = str, help='input file prefix')
parser.add_argument('--output', type = str, help='output file prefix')

args = vars(parser.parse_args())
args = dict((k,v) for k,v in args.items() if v is not None)

input = args["input"]

if args.get("output", None) == None:
  output = input + ".e"
else:
  output = args["output"]

### 
trees = read_trees(input + ".trees")
egrm, egrm_tl = getEK_trees(trees)

write_grm(egrm, egrm_tl, output)
